<html>
  <head></head>
  <body>
    <style>

      html {
        background-color: #f7cac9;
      }
/*forms and output*/
      h1 {
        position: relative;
        left: 42%;
        top: 160px;
        font-family: cursive;
        width: 100px;
      }
      form {
        position: relative;
        top: 170px;
        left: 30%;
      }
      #input {
        width: 20px;
        border: 1px solid black;
        border-radius: 5px;
      }
      .input {
        position: relative;
        top: 330px;
        left: 38%;     
        width: 100px;   
      }
      .button {
        position: relative;
        top: 100px;
        left: 38%;
        width: 100px;
      }
      #known {
        position: relative;
        left: 54%;
        top: 195px;
        width: 100px;
      }
      #output {
        width: 200px;
        position: relative;
        left: 38%;
        top: 50px;
      }
/*the hangman*/
      #guy {
        position: relative;
        left: 55%;
        width: 10px;
        height: 10px;
      }
      img {
        position: relative;
        width: 100px;
        top: -367px;
        left: -13px;
      }
      .guy {
        position: relative;
        background-color: #91A8d0;
      }
      #head {
        width: 30px; height: 30px;
        opacity: <%= head %>;
        top: 20px;
        left: 15px;
        border-radius: 20px;
      }
      #larm {
        width: 20px; height: 10px;
        opacity: <%= larm %>;
        top: -28px;
      }     
      #rarm {
        width: 20px; height: 10px;
        opacity: <%= rarm %>;
        top: -37px;
        left: 40px;
      }
      #lleg {
        width: 10px; height: 40px;
        opacity: <%= lleg %>;
        top: -30px;
        left: 31px;
      }
      #rleg {
        width: 10px; height: 40px;
        opacity: <%= rleg %>;
        top: -70px;
        left: 20px;
      }
      #lhand {
        border-radius: 5px;
        width: 15px; height: 15px;
        opacity: <%= lhand %>;
        top: -50px;
        left: -5px;
      }
      #rhand {
        border-radius: 5px;
        width: 15px; height: 15px;
        opacity: <%= rhand %>;
        top: -65px;
        left: 50px;
      }
      #rfoot {
        border-radius: 5px;
        width: 15px; height: 15px;
        opacity: <%= rfoot %>;
        top: -70px;
        left: 15px;
      }
      #lfoot {
        border-radius: 5px;
        width: 15px; height: 15px;
        opacity: <%= lfoot %>;
        top: -85px;
        left: 30px;
      }
      #torso {
        position: relative;
        width: 15px; height: 55px;
        opacity: <%= torso %>;
        top: 20px;
        left: 23px;
      }

    </style>

    <form class='input'>
      Your guess: <input type='text' id='input' name='guess' maxlength='1' />
      <input type='submit' value='guess!' />
    </form>

    <form class='button' id='reload' method="post" action="/new"> <input class='btn btn-primary' type='submit' value='new game'> </form>
    <form class='button' id='save' method="post" action="/save"> <input class='btn btn-primary' type='submit' value='save game'> </form>
    <form class='button' id='load' method="post" action="/load"> <input class='btn btn-primary' type='submit' value='load last saved'> </form>

    <p id='known'> <%= known %> </p>

    <div id="guy">
      <div class="guy" id="head"></div>
      <div class="guy" id="torso"></div>
      <div class="guy" id="larm"></div>
      <div class="guy" id="rarm"></div>
      <div class="guy" id="lhand"></div>
      <div class="guy" id="rhand"></div>
      <div class="guy" id="lleg"></div>
      <div class="guy" id="rleg"></div>
      <div class="guy" id="rfoot"></div>
      <div class="guy" id="lfoot"></div>
      <img src="noose.png">
   </div>
    <p id='output'><br> <%= points_etc %> </p>
    <h1>HANGMAN</h1>
  </body>
</html>